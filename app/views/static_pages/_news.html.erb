<div class="col-md-6 col-lg-4 col-xl-3 ">
  <div class ="card h-100 border-0">
    <%= link_to news_path(news) do %>
      <%= image_tag news.news_image.url, class: "card-img-top img-fluid rounded" %>
    <% end %>
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class=" text-muted"><%= l news.created_at, format: :news %></div>
        <%= link_to news.category_i18n, news_index_path(category: news.category), class:"btn btn-outline-success btn-sm rounded-pill d-none d-md-block" %>
      </div>
      <%= link_to news.title, news_path(news) %>
    </div>
  </div>
</div>
