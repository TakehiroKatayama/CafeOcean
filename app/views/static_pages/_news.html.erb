<div class="col-md-6 col-lg-4 col-xl-3 ">
  <%= link_to news_path(news), class: "card h-100 border-0" do %>
    <%= image_tag news.news_image.url, class: "card-img-top img-fluid rounded" %>
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class=" text-muted"><%= l news.created_at, format: :news %></div>
        <p class="btn btn-outline-success btn-sm rounded-pill d-none d-md-block"><%= news.category_i18n%></p>
      </div>
      <b><%= news.title%></b>
    </div>
  <% end %>
</div>
