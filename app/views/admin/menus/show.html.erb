<div class="container p-3 p-md-4 p-lg-5">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <div class="card">
        <div class="m-3 m-md-5">
          <%= image_tag @menu.menu_image.url, class: "card-img-top img-fluid rounded" %>
        </div>
        <h2 class="m-3 m-md-5"><%= @menu.name%></h2>
        <div class="body m-3 m-md-5">
          <p><%= simple_format @menu.content%></p>
        </div>
      </div>
    </div>
  </div>
</div>
